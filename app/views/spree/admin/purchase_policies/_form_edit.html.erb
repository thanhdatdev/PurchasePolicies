<%= render "spree/shared/error_messages", target: @purchase_policy %>

<%= f.field_container :purchase_policy_type do %>
  <%= f.label :purchase_policy_type, I18n.t("spree.purchase_policy_type") %><br/>
  <%= f.select :purchase_policy_type_id, Spree::PurchasePolicyType.all.collect {|c| [ c.name, c.id ]} %>
<% end %>

<%= f.field_container :title do %>
  <%= f.label :title %><br/>
  <%= f.text_field :title, maxlength: "255", size: "60" %>
<% end %>

<%= f.field_container :content do %>
  <%= f.label :content %><br/>
  <%= f.text_area :content, wrap: "virtual", rows: "10", cols: "60" %>
<% end %>
